- pour passer les stats sur toutes les tables :
set heading off;
spool stat_table.sql;
select 'ANALYZE table ' || table_name || ' COMPUTE STATISTICS;' from user_tables;
spool off;
@stat_table.sql;
set heading on;

- pour passer les stats sur tous les indexs :
set heading off;
spool stat_index.sql;
select 'ANALYZE index ' || index_name || ' COMPUTE STATISTICS;' from user_indexes;
spool off;
@stat_index.sql;
set heading on;
